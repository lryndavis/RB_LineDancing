<div class="row">
  <div class="col-md-6">
    <h1>Teams</h1>
    <div class="list-group">
      <% @teams.each do |team| %>
        <div class="row">
          <div class="col-xs-9">
            <a href="/teams/<%= team.id %>">
              <button class="list-group-item">
                <%= team.name %>
              </button>
            </a>
          </div>
          <div class="col-xs-3">
            <form class="" action="/teams/<%= team.id() %>/delete" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class=" form-control btn-block btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% end %>
    </div>

    <form class="form-inline" action="/teams/new" method="post">
      <input class="form-control" type="text" name="team_name" required>
      <button class="btn btn-primary" type="submit">Add Team</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h1>Dancers</h1>
    <div class="list-group">
      <% @dancers.each do |dancer| %>
        <div class="row">
          <div class="col-xs-9">
            <a href="/dancers/<%= dancer.id %>">
              <button class="list-group-item">
                <%= dancer.name %>
              </button>
            </a>
          </div>
          <div class="col-xs-3">
            <form class="" action="/dancers/<%= dancer.id() %>/delete" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class=" form-control btn-block btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% end %>
    </div>


    <form class="form-inline" action="/dancers/new" method="post">
      <input class="form-control" type="text" name="dancer_name" required>
      <button class="btn btn-primary" type="submit">Add Dancer</button>
    </form>
  </div>
</div>
